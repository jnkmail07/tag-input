.tag-input {
  font-family: Arial, Helvetica, sans-serif;
  border: solid 1px #ccc;
  box-sizing: border-box;
  padding: 0 4px;
  position: relative;
  .new-tag {
    border: none;
    font-size: 16px;
    padding: 4px 2px;
  }
  .pill {
    display: inline-block;
    margin: 0 5px 5px 0;
    border-radius: 3px;
    border: solid #1234ef 3px;
    background-color: #1234ef;
    color: #fff;
    padding: 0px 3px;
    font-size: 13;
    transition: background-color border-color 0.5s ease;
    &.highlight {
      background-color: #f1c40f;
      border-color: #f1c40f;
    }
    .remove {
      cursor: pointer;
      vertical-align: middle;
      padding: 0 0 0 5px;
    }
  }
}
